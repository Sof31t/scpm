<p>
	<%= link_to "Stream", {:controller => "streams", :action => "show", :id => @stream.id},{:class=>"btnlnk"} %>
	<%= link_to "Projects",{:controller => "streams", :action => "show_stream_projects", :id => @stream.id},{:class=>"btnlnk"}%>
	<%= link_to "Informations", {:controller => "streams", :action => "show_stream_informations", :id => @stream.id},{:class=>"btnlnk"}%>
	<% @stream.review_types.each do |review_type| %>
		<%= link_to  review_type.title , {:controller => "streams", :action => "show_stream_review", :id => @stream.id, :type => review_type.id },{:class=>"btnlnk"}%>
	<% end %>
</p>

<h2>Informations</h2>
<%= link_to('Edit stream informations', {:action=>'edit', :id=>@stream.id}, {:class=>'btnlnk'}) %>
<p><b>Supervisor : </b> <%= @stream.supervisor.name %></p>
<p><b>Quality Manager : </b> <%= @stream.quality_manager %></p>
<p><b>DWL : </b> <%= @stream.dwl %></p>
<p><b>Process Owner : </b> <%= @stream.process_owner %></p>
<p><b>Request resp:</b> <%=@stream.assignees.join(', ')%></p>



<h2>Review type</h2>
<% form_tag ({:controller => "streams", :action => "update_stream_review_types"}, :method => "post") do %>
	<%= hidden_field_tag('id', @stream.id) %>
	<% @reviewTypes.each do |rt| %>
		<p><%= rt.title %>
		<% checkboxName = rt.id.to_s %>
		<% if(@stream.review_types.include?(rt))%>
			<%= check_box_tag("reviewTypeForm[]",checkboxName,true) %>
		<% else %>
			<%= check_box_tag("reviewTypeForm[]",checkboxName,false) %>
		<% end %>
		</p>
	<% end %>
	<%= submit_tag "Update" %>
<% end %>


<h2>Requests</h2>
<ul>
<%= render(:partial=>'projects/request', :collection=>@stream.requests) %>
</ul>