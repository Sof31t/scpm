<li id="q_<%=q.id%>" class="<%=q.css_class%>">
  <%= check_box_tag(:question, 1, q.deployed==1, {:onclick=>"deploy_question(#{q.id}, this.checked)"}) %>
  <%= q.question %>
  <%= link_to(image_tag('edit.gif'), {:controller=>'generic_risk_questions', :action=>'edit', :id=>q.id}) %>
  <%= link_to_remote(image_tag('delete.gif'), :url=>{:controller=>'generic_risk_questions', :action=>'destroy', :id=>q.id}, :confirm=>"Are you sure you want to delete this question and associated risks ?", :success=>"$('q_#{q.id}').hide();") %>
  <%= link_to(image_tag('add.png'), :controller=>'generic_risks', :action=>'new', :id=>q.id) %>

  <ul class="generic_risks">
    <%= render(:partial=>'generic_risks/generic_risk', :collection=>q.generic_risks, :as=>:r) %>
  </ul>
</li>

