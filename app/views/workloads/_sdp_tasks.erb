<div id='<%=partial_id%>'>
<% if !@workload.person or !@workload.person.trigram or @workload.person.trigram=='' %>
  <strong>no trigram, so no SDP task</strong>
  <% if @workload.person %>
    <%= link_to('add a trigram', :controller=>'people', :action=>'edit', :id=>@workload.person.id) %><br/>
  <% end %>
  <br/>
<% elsif @sdp_tasks.size == 0 %>
  <strong>No tasks for <%= @workload.person.name %></strong><br/>
<% end %>
<%= label_tag(:sdp_task, "SDP Task") %>
<%= select_tag('sdp_task_id', options_for_select(@sdp_tasks)) %>
<% @update_name = false %>
<%= submit_tag("Add") %><br/>
<% if partial_id=="sdp_tasks_edit" %>
<%= check_box_tag('update_sdp_tasks_name', false) %> Update workload line name with all associated tasks<br/><br/>
<% end %>
<a onclick="get_all_sdp_tasks()" href="#"> Also display tasks with no remaining</a><br/>

<% if edit_line %>
  <ul class="sdp_tasks">
    <%= render(:partial=>'sdp_task', :collection=>edit_line.sdp_tasks, :as=>:t, :locals=>{:wl_line=>edit_line}) %> <!-- send checkbox value in locals -->
  </ul>
<% end %>

</div>
