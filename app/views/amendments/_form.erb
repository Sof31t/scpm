<%= hidden_field :amendment, :project_id %>

<p><%= label_tag 'project' %>
<%= select(:amendment, :project_id, @projects_select, :include_blank=>"=== No project ===") %>
</p>

<p><%= label_tag 'milestone' %>
<%= select(:amendment, :milestone, ['M1','M3','M5','M5/M7','M7','M9','M9/M10','M10','M10a','M11','M12','M12/M13','M13','M14','CCB','MIPM','G0','G2','G3','G4','G5','G6','G7','G8','G9','g0','g2','g3','g4','g5','g6','g7','g8','g9','pg0','pg2','pg3','pg4','pg5','pg6','pg7','pg8','pg9','sM1','sM3','sM5','sM13','sM14']) %>
</p>

<p><%= label_tag 'amendment' %>
<%= text_area :amendment, :amendment, {:rows=>3} %></p>

<p><%= label_tag 'status' %>
<%= text_area :amendment, :action, {:rows=>3} %>
</p>

<p><%= label_tag 'responsible' %>
<%= text_field :amendment, :responsible %></p>

<p><%= label_tag 'duedate' %>
<%= text_field :amendment, :duedate %> yyyy-mm-dd

<p><%= label_tag 'done' %>
<%= check_box :amendment, :done %></p>
