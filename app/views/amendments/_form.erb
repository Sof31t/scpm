<%= hidden_field :amendment, :project_id %>

<p><%= label_tag 'project' %>
<%= select(:amendment, :project_id, @projects_select, :include_blank=>"=== No project ===") %>
</p>

<p><%= label_tag 'milestone' %>
<%= select(:amendment, :milestone, ['M1','M3','M5','M5/M7','M7','M9','M9/M10','M10','M10a','M11','M12','M12/M13','M13','M14','CCB','MIPM','G1','G2','G3','G4','G5','G6','G7','G8','G9']) %>
</p>

<p><%= label_tag 'amendment' %>
<%= text_area :amendment, :amendment, {:rows=>3} %></p>

<p><%= label_tag 'action' %>
<%= text_area :amendment, :action, {:rows=>3} %></p>

<p><%= label_tag 'responsible' %>
<%= text_field :amendment, :responsible %></p>

<p><%= label_tag 'duedate' %>
<%= text_field :amendment, :duedate %> yyyy-mm-dd (was milestone date, but the due date is more appropriate, so check this date)</p>

<p><%= label_tag 'done' %>
<%= check_box :amendment, :done %></p>
