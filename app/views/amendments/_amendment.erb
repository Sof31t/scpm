<tr id="a_<%=amendment.id%>" class="amendment<%=amendment.done%>">

<td><%= amendment.id %></td>

<td>
<b>
<% if amendment.project %><%= amendment.project.full_name %><% end %>
</b>
</td>

<td>
<%= amendment.milestone.upcase %>
</td>

<td>
<%= amendment.amendment %>
</td>

<td>
<%= amendment.action %>
</td>

<td>
<%= amendment.responsible %>
</td>

<td>
<%= amendment.creation_date %>
</td>

<td>
<%= link_to(image_tag('edit.gif'), {:controller=>'amendments', :action=>'edit', :id=>amendment.id}) %>
<%= link_to_remote(image_tag('delete.gif'), :url=>{:controller=>'amendments', :action=>'destroy', :id=>amendment.id}, :confirm=>"You should change the amendment status to 'done', are you sure you want to delete this amendment ?", :success=>"$('a_#{amendment.id}').hide();") %>
<%#= link_to_remote(image_tag('cut.png'), :url=>{:controller=>'amendments', :action=>'cut', :id=>amendment.id}) %>
</td>
</tr>
