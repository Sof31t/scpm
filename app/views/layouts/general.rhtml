<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<meta name="robots" content="all">
	<title>EISQ Manager</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
	<link rel="stylesheet" type="text/css" href="/stylesheets/chat.css" />
  <%= javascript_include_tag :defaults %>
  <!--<script src="/javascripts/timeline/timeline_js/timeline-api.js?bundle=true" type="text/javascript"></script>-->
  <script src="/javascripts/chat.js" type="text/javascript"></script>
	<link rel="Shortcut Icon" type="image/x-icon" href="/images/favicon.ico" />
</head>

<body>
<%
  cu = current_user
  redirect_to "/" and return if(not cu) 
  cu.last_view = Time.now
  cu.save
  s = cu.open_actions.size
  if s > 0
   nb_actions = ' <strong>' +s.to_s+'</strong>'
  else
    nb_actions = ''
  end
%>

<%= render :file => 'chat/main' %>

<div id="banner">
<%= image_tag('chrome.png', :align=>:right, :title=>"works better in Chrome (une façon de dire que le développeur ne teste pas tous les navigateurs...)") %>
<div id="title">EISQ Report</div>
<div id="bandeau">
<% b = get_bandeau; if b %>
<div class="text"><%= b.text %></div>
<div class="person"><%= b.person.name %></div>
<% end %>
<div class="link"><%= link_to('Add something', {:controller=>'bandeaus', :action=>'new'}) %></div>
</div>


<div id="menu_bar">
<%= link_to('Projects', {:controller=>'projects', :action=>'index'}, {:class=>menu_style('projects','*')}) %>
<%= link_to('Topics', {:controller=>'topics', :action=>'index'}, {:class=>menu_style('topics','*')}) %>
<%= link_to('Actions'+nb_actions, {:controller=>'actions', :action=>'index'}, {:class=>menu_style('actions','*')}) %>
<%= link_to('Requests', {:controller=>'welcome', :action=>'index'}, {:class=>menu_style('welcome','index')}) %>
<%= link_to('People', {:controller=>'people', :action=>'index'}, {:class=>menu_style('people','*')}) %>
<%= link_to('Reminders', {:controller=>'welcome', :action=>'reminders'}, {:class=>menu_style('welcome','reminders')}) %>

<% if current_user.has_role?('Admin') %>
<%= link_to('Import', {:controller=>'welcome', :action=>'update'}, {:class=>'menu'}) %>
<%= link_to('Tools', {:controller=>'tools', :action=>'index'}, {:class=>'menu'}) %>
<% end %>

<% if current_user.has_role?('Super') %>
<%= link_to('Logs', {:controller=>'logs'}, {:class=>'menu'}) %>
<% end %>

<%= link_to('Logout', {:controller=>'sessions', :action=>'logout'}, {:class=>'menu'}) %>
<b><%= Date.today %> - week <%= Date.today.cweek %></b>
<% form_tag({:controller=>'projects', :action=>'filter'}, {:style=>"display:inline;"}) do %>
<%= text_field_tag('text', '', {:size=>5}) %>
<%= link_to 'Updates', '/changes.txt', {:class=>'menu'} -%>
<% end %>
</div>

</div>

<div id="content">

<%= yield %>
</div>

</body>
</html>
