<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<meta name="robots" content="all">
	<title>EISQ Manager</title>
  <%= javascript_include_tag :defaults %>
  <script src="/javascripts/timeline/timeline_js/timeline-api.js?bundle=true" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="/stylesheets/styles.css" />
	<link rel="Shortcut Icon" type="image/x-icon" href="/images/favicon.ico" />
</head>

<body>

<div id="banner">
<%= image_tag('chrome.png', :align=>:right, :title=>"works better in chrome") %>
<h1>EISQ Quality Bundle Report</h1>

<div id="menu_bar">
<%= link_to('Projects', {:controller=>'projects', :action=>'index'}, {:class=>'menu'}) %>
<%= link_to('Actions', {:controller=>'actions', :action=>'index'}, {:class=>'menu'}) %>
<%= link_to('Requests', {:controller=>'welcome', :action=>'index'}, {:class=>'menu'}) %>
<%= link_to('People', {:controller=>'people', :action=>'index'}, {:class=>'menu'}) %>
<%= link_to('Reminders', {:controller=>'welcome', :action=>'reminders'}, {:class=>'menu'}) %>

<% if current_user.has_role?('Admin') %>
<%= link_to('Update', {:controller=>'welcome', :action=>'update'}, {:class=>'menu'}) %>
<%= link_to('Workload schedule', {:controller=>'welcome', :action=>'workload_schedule'}, {:class=>'menu'}) %>
<% end %>

<%= link_to('Logout', {:controller=>'sessions', :action=>'logout'}, {:class=>'menu'}) %>
</div>

</div>

<div id="content">
<%= yield %>
</div>

</body>
</html>
